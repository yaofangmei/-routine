/* -----------------tab部分---------------- */
.container{
position: relative;
}
.tab{
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.tab image{
  width: 30rpx;
  height: 30rpx;
}
.tab>.houseType,.tab>.houseStyle,.tab>.houseArea,.tab>.houseBudget{
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tab-container {
  display: flex;
  flex-wrap: wrap;
  padding-top: 50rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  z-index: 50;
  position: absolute;
  background-color: #fff;
  /* align-content: space-around; */
}
.tab-container .alltext{
  font-size: 30rpx;
  background-color: #eee;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  /* padding: 10rpx 10rpx; */
  padding:20rpx 0;
  width: 130rpx;
  text-align: center;
}
