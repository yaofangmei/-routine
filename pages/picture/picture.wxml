<!-- -------------带遮罩层的 下拉菜单部分---------------------------- -->
<!-- 带遮罩层的 下拉菜单 -->
<view class="content-container">
  <view class="pick-header" >
    <view class='pick-header1' bindtap="onPickHeaderClick">
      <view>空间</view>
      <image src='../../images/xia-jiantou.png'></image>
    </view>
    <view class='pick-header2' bindtap="onPickHeaderClick">
      <view>风格</view>
      <image src='../../images/xia-jiantou.png'></image>
    </view>
    <view class='pick-header3' bindtap="onPickHeaderClick">
      <view>局部</view>
      <image src='../../images/xia-jiantou.png'></image>
    </view>
  </view>
  
  <view class="pick-container {{needAnimation?(openPicker?'slidown':'slidup'):''}}">
    <block wx:for="{{orgList}}" wx:for-item="item" wx:key="key">
      <view data-id="{{index}}" bindtap='clickPick'>
        <text style="{{index == itemId?'color:#1ecc8b':''}}">{{item.Name}} </text> </view>
    </block>
  </view>
  <view class="shadow" hidden="{{!openPicker}}"></view>
  <view class="content" style="height:{{contentHeight}}px"></view>
</view>


<!------------------------------------------------------------------------ -->

<!-- 瀑布流部分 -->
<view class='content'>
  <view class='list-masonry'>
    <view class='item-masonry' wx:for="{{note}}" wx:key="key">
      <image src='{{item.url}}' mode='widthFix'></image>
      <text>{{item.text}}</text>
      <view class='item-masonry'>
        <text class='avatar'>{{item.avatar}}</text>
        <text class='company'>{{item.title}}</text>
      </view>
      
    </view>
  </view>
</view>