<view class='container'>
  <!----------------- 顶部tab部分 --------------->
  <view class='tab'>
     <scroll-view class="scroll-view" scroll-x="true" style='width:100%' >
        <view wx:for="{{tabList}}"  wx:key="id" class='tabList name {{item.id==currentId?"name-hover":" "}}' bindtap='tabClick' data-id="{{item.id}}">{{item.name}}</view> 
     </scroll-view>
  </view>
  <!----------------- 下面内容部分 --------------->
  
  <view class='content'>
    <block wx:for="{{contentList}}" wx:for-item="item" wx:key="key">
      <view class='item' data-id="{{index}}">
        <view class='item-left'>
          <text class='item-left-1'>{{item.left1}}</text>
          <text class='item-left-2'>{{item.left2}}</text>
        </view>
        <view class='item-right'>
          <image src='{{item.imgUrl}}'></image>
        </view>
      </view>
    </block>
  </view>
 


















  <!----------------- 下面内容部分 --------------->
  <view class='content-container'></view>
</view>